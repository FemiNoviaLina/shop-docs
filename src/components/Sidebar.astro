---
interface Props {
    position?: string;
    title: string;
    icon: string;
    content?: any;
}

const {
    position = "fixed top-0 left-0",
    title,
    icon,
    content = "",
} = Astro.props;
---

<aside
    class=`box-border z-40 w-72 m-2 h-screen transition-transform ${position}`
    aria-label="Sidebar"
>
</aside>
<div
    class=`max-h-full rounded-md m-2 w-72 overflow-y-auto bg-gray-100 shadow-md ${position}`
>
    <div class="p-2 rounded-t-md bg-gray-800 w-full">
        <button
            class="bg-red-600 rounded-full flex w-4 h-4 hover:bg-red-500 hover:text-gray-200 transition-colors align-center justify-center"
        >
            <p class="leading-[.85rem] text-white text-xs text-center">x</p>
        </button>
    </div>
    <div class="my=b-2 p-2">
        <div class="flex content-center gap-2 m-2">
            <img src=`/images/${icon}` class="h-6" />
            <h1 class="text-lg font-bold">{title}</h1>
        </div>
        <ul class="space-y-2 font-medium">
            <li>
                <a
                    href="#"
                    class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-200 group"
                >
                    {content}
                </a>
            </li>
        </ul>
    </div>
</div>
